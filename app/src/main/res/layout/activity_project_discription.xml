<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list"
    tools:context="com.example.zizoj.findproject.ProjectDiscription"

   >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="#ffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aclonica"
            android:padding="20dp"
            android:text="find project"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/PROJectname"/>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:background="#ffffff"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Year"
                android:textColor="#646464"

                android:textSize="15dp"

                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/viewtxt">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtYears"
                        style="@style/Widget.AppCompat.TextView.SpinnerItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="2017"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:focusedByDefault="true"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="StudentName"
                android:textSize="15dp"
                android:textColor="#646464"
                android:textStyle="bold|italic"
                android:typeface="normal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/viewtxt"
                android:padding="5dp">


                <TextView
                    android:id="@+id/Studentname1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Studentname2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Studentname3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Studentname4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Studentname5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/Studentname6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="25dp"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    android:text="Sally Elsaid saeed"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Discription"
                android:textStyle="bold|italic"
                android:typeface="normal"
                android:textSize="15dp"
                android:textColor="#646464"
                android:textAlignment="textStart"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/viewtxt"
                android:paddingBottom="2dp"
                android:padding="5dp">



                <TextView
                    android:id="@+id/Discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="adasdasdasdasdasdasdass"
                    android:textStyle="bold|italic"
                    android:typeface="normal"
                    android:textSize="20dp"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:textIsSelectable="true"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>
